{
  "name": "i18n4e",
  "version": "1.0.0",
  "description": "Internationalize express applications with the i18n standard",
  "main": "dist/i18n4e.main.js",
  "types": "dist/i18n4e.main.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:server": "nodemon ./server/server.js",
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./config/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./config/tsconfig.cjs.json",
    "prepack": "npm run build",
    "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"./**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luiisp/i18n4e.git"
  },
  "author": "luisp",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/luiisp/i18n4e/issues"
  },
  "homepage": "https://github.com/luiisp/i18n4e#readme",
  "keywords": [
    "i18n",
    "ejs",
    "template",
    "translation",
    "localization",
    "simple",
    "internationalization"
  ],
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "nodemon": "^3.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "prettier": "^3.2.5"
  }
}
