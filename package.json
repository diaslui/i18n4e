{
  "name": "i18n4e",
  "version": "0.1.0",
  "description": "i18n4e is a quick and easy way to add internationalization support to your Express Js application.",
  "main": "lib/cjs/i18n4e.main.js",
  "types": "./i18n4e.main.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf ./lib",
    "test:server": "cls && npm run clean && npm run build:esm && npm run build:cjs && cd ../server && code . && npm run dev",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./config/tsconfig.esm.json && shx mv lib/esm/i18n4e.main.js lib/esm/i18n4e.main.mjs",
    "build:cjs": "tsc -p ./config/tsconfig.cjs.json",
    "prepack": "npm run build",
    "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"./**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luiisp/i18n4e.git"
  },
  "author": "luisp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luiisp/i18n4e/issues"
  },
  "homepage": "https://github.com/luiisp/i18n4e#readme",
  "keywords": [
    "i18n",
    "ejs",
    "express",
    "template",
    "translation",
    "localization",
    "simple",
    "internationalization"
  ],
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "shx": "^0.3.4"
  },
  "dependencies": {
    "@types/jest": "^29.5.12"
  }
}
